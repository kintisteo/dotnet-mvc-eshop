@model EPaper.Models.Book
@*
@using EPaper.Extensions
    *@
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<br />
<h2 class="text-info">Create Book</h2>

<form method="post" enctype="multipart/form-data">
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Product.Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Product.Name" class="form-control" />
            </div>
            <span asp-validation-for="Product.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Category"></label>
            </div>
            <div class="col-5">
                <input asp-for="Category" class="form-control" />
            </div>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Product.Description"></label>
            </div>
            <div class="col-5">
                <input asp-for="Product.Description" class="form-control" />
            </div>
            <span asp-validation-for="Product.Description" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Product.Price"></label>
            </div>
            <div class="col-5">
                <input asp-for="Product.Price" class="form-control" />
            </div>
            <span asp-validation-for="Product.Price" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Pages"></label>
            </div>
            <div class="col-5">
                <input asp-for="Pages" class="form-control" />
            </div>
            <span asp-validation-for="Pages" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Author"></label>
            </div>
            <div class="col-5">
                <input asp-for="Author" class="form-control" />
            </div>
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Publisher"></label>
            </div>
            <div class="col-5">
                <input asp-for="Publisher" class="form-control" />
            </div>
            <span asp-validation-for="Publisher" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="DatePublished"></label>
            </div>
            <div class="col-5">
                <input asp-for="DatePublished" class="form-control" />
            </div>
            <span asp-validation-for="DatePublished" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Product.Image"></label>
            </div>
            <div class="col-5">
                <input type="file" name="files" class="form-control" />
            </div>
            <span asp-validation-for="Product.Image"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Product.Available"></label>
            </div>
            <div class="col-5">
                <input asp-for="Product.Available" class="form-control" />
            </div>
            <span asp-validation-for="Product.Available" class="text-danger"></span>
        </div>




        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Create" />
            <a asp-action="BookIndex" class="btn btn-success">Back to List</a>

        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}