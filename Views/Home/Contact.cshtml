@{
    ViewData["Title"] = "Contact";
}
<div class="container">
    <h1>@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-6">
            <form>

                <div class="form-group">
                    <label for="colFormLabel">Email</label>
                    <input type="email" class="form-control" id="colFormLabel" placeholder="">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Full Name</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="2"></textarea>
                </div>


                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Message</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                </div>

                <div class="col-auto my-1">
                    <button type="submit" class="btn my-btn-red">Submit</button>
                </div>

            </form>
        </div>

        <div class="col-md-6">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3144.9231216132043!2d23.72287881559691!3d37.97892340816009!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14a1bd237bc06cc7%3A0x268e920fa02c2f45!2sEschilou+7%2C+Athina+105+54!5e0!3m2!1sen!2sgr!4v1556905204982!5m2!1sen!2sgr" width="100%" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
        </div>
    </div>

    <p class="font-italic">
        If you want to see us as person or contact with us by phone.
    </p>
    <div class="row">
        <div class="col-md-12">
            <address>
                <dd><i class="fa fa-map-marker"></i> Monday - Friday: 11:00 - 20:00</dd>
                <dd><i class="fa fa-location-arrow"></i> Aisxilou 7 Athens Greece</dd>
                <dd><i class="fa fa-phone"></i> 2101234567</dd>
                <dd><i class="fa fa fa-envelope"></i><a href="info@epaper.com"> info@epaper.com</a></dd>
            </address>
        </div>
    </div>

</div>