@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/book-slider.png" class="img-fluid">
            </div>
            <div class="carousel-item">
                <img src="~/images/comics-slider.png" class="img-fluid">
            </div>
            <div class="carousel-item">
                <img src="~/images/magazines-slider.png" class="img-fluid">
            </div>
            <div class="carousel-item">
                <img src="~/images/slider-cd.jpg" class="img-fluid">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div class="container">


    <br />
    <br />
    <br />
    <div class="row">
        <div class="col-12 col-sm-6" data-aos="fade-right">
            <img src="~/images/Books-home.jpg" class="rounded img-fluid">
        </div>
        <div class="col-12 col-sm-6" data-aos="fade-left">
            <h3 class="text-center">
                <a class="animated-arrow"
                    href = "/book">
                    <span class="the-arrow -left">
                        <span class="shaft"></span>
                    </span>
                    <span class="main">
                        <span class="text">
                            Books
                        </span>
                        <span class="the-arrow -right">
                            <span class="shaft"></span>
                        </span>
                    </span>
                </a>
            </h3>
            <p class="text-center">
                Here you can find the most spectacular books you ever searched for. You can Find about mythology, historical, romantic even encyclopedias.
            </p>
            <div class="text-center w-100">
                <button onclick="window.location.href='/book'" type="button" class="btn my-btn">All Books</button>
            </div>
        </div>
    </div>
    <br />
    <div class="row">

        <div class="col-12 col-sm-6" data-aos="flip-up">
            <h3 class="text-center">
                <a class="animated-arrow"
                   href="/comic">
                    <span class="the-arrow -left">
                        <span class="shaft"></span>
                    </span>
                    <span class="main">
                        <span class="text">
                            Comics
                        </span>
                        <span class="the-arrow -right">
                            <span class="shaft"></span>
                        </span>
                    </span>
                </a>
            </h3>
            <p class=text-lg-center>
                Comics with aliens, comics with superheores, Mickey Mouse and Asterics are some of the categories of comics that you can find in Epaper.
            </p>
            <div class="text-center w-100">
                <button onclick="window.location.href='/comic'" type="button" class="btn my-btn">All Comics</button>
            </div>
        </div>
        <div class="col-12 col-sm-6" data-aos="flip-down">
            <img src="~/images/Comic-home.jpg" class="rounded img-fluid">
        </div>
    </div>

    <br />
    <div class="row">
        <div class="col-12 col-sm-6" data-aos="zoom-in-down">
            <img src="~/images/magazine-home.jpg" class="rounded img-fluid"></div>
        <div class="col-12 col-sm-6" data-aos="zoom-in-up">
            <h3 class="text-center">
                <a class="animated-arrow"
                   href="/magazine">
                    <span class="the-arrow -left">
                        <span class="shaft"></span>
                    </span>
                    <span class="main">
                        <span class="text">
                            Magazines
                        </span>
                        <span class="the-arrow -right">
                            <span class="shaft"></span>
                        </span>
                    </span>
                </a>
            </h3>
            <p class="text-center">
                This section contains gossip, fashion and also magazines about animals and the nature.
            </p>
            <div class="text-center w-100">
                <button onclick="window.location.href='/magazine'" type="button" class="btn my-btn">All Magazines</button>
            </div>
        </div>
    </div>
    <br />

    <div class="row">

        <div class="col-12 col-sm-6" data-aos="fade-up" data-aos-duration="3000">
            <h3 class="text-center">
                <a class="animated-arrow"
                   href="/cd">
                    <span class="the-arrow -left">
                        <span class="shaft"></span>
                    </span>
                    <span class="main">
                        <span class="text">
                            Cd
                        </span>
                        <span class="the-arrow -right">
                            <span class="shaft"></span>
                        </span>
                    </span>
                </a>
            </h3>
            Jaz<br />
            Pop<br />
            Rock<br />
            Reggie<br />
            <p>
                Here are some of the categories that you can find in our eshop
            </p>
            <div class="text-center w-100">
                <button onclick="window.location.href='/cd'" type="button" class="btn my-btn">All Cds</button>
            </div>
        </div>
        <div class="col-12 col-sm-6" data-aos="fade-down" data-aos-easing="linear" data-aos-duration="1500">
            <img src="~/images/cd-home.jpg" class="rounded img-fluid">
        </div>
    </div>
</div>  